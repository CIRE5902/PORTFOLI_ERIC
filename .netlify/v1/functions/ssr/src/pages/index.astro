---
import Navbar from '../components/Navbar.astro';
import LanguageSelector from '../components/LanguageSelector.astro';
import ProfileRiddle from '../components/ProfileRiddle.astro';
import Experience from '../components/Experience.astro';
import Education from '../components/Education.astro';
import Projects from '../components/Projects.astro';
import Media from '../components/Media.astro';
import Stack from '../components/Stack.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Eric Pérez Vera – Portfolio</title>
    <link rel="stylesheet" href="/css/pages/index.css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700&display=swap" rel="stylesheet" />
    <script type="module" src="/js/theme.js"></script>
    <script type="module" src="/js/language.js"></script>
    <script type="module" src="/js/riddle.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  </head>
  <body>
    <LanguageSelector />
    <Navbar />

    <main>
      <ProfileRiddle />
      <div class="box-experience-education">
        <Experience />
        <Education />
      </div>
      <Projects />
      <Media />
      <Stack />
    </main>
  </body>
</html>